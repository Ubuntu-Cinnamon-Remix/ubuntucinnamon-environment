#!/bin/sh
exec cinnamon-session --session cinnamon2d "$@"

# Ubuntu Cinnamon Live Session:
# Change ownership of Desktop folder from root to cinnamon-remix
chown cinnamon-remix -R /home/cinnamon-remix/Desktop
chown cinnamon-remix -R /home/cinnamon-remix/Desktop/cinnamon-remix-calamares.desktop
chown cinnamon-remix:cinnamon-remix -R /home/cinnamon-remix/Desktop
chown cinnamon-remix:cinnamon-remix -R /home/cinnamon-remix/Desktop/cinnamon-remix-calamares.desktop
